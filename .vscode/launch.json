{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS (Backend)",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": [
        "${workspaceFolder}/backend/src/main.ts" // Adjust to point to your backend main file
      ],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/backend", // Set current working directory to backend
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
